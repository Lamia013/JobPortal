@model JobPortal.Models.Job

<h2>@Model.Title</h2>
<p><strong>@Model.Company</strong></p>

<p> @Model.Location</p>
<p>@Model.JobType</p>
<p>$@Model.SalaryMin - $@Model.SalaryMax</p>

<hr />

<p>@Model.Description</p>

<a asp-action="Apply" asp-route-id="@Model.Id"
   class="btn btn-success">
   Apply Now
</a>

function closeJobOverlay(){
    document.getElementById('jobDetailsOverlay').style.display = 'none';
}
document.getElementById('jobDetailsOverlay').addEventListener('click', function(e){
    if(e.target === this) closeJobOverlay();
});
</script>
